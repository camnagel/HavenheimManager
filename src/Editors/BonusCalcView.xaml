<Window x:Class="AssetManager.Editors.BonusCalcView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="BonusCalcView" Height="1000" Width="825" Background="DarkGray">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="10, 10, 10, 10">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150"
                            Height="250">
                    <TextBlock Margin="0, 0, 0, 0" TextAlignment="Center">Alchemical:</TextBlock>
                    <DataGrid ItemsSource="{Binding AlchemicalBonuses}" Background="DimGray" Foreground="AliceBlue"
                              Width="150" Height="200" HeadersVisibility="Column" MouseDown="DeselectRow"
                              SelectedItem="{Binding SelectedAlchemicalBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="DimGray" />
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="FontSize" Value="14" />
                                <Setter Property="Width" Value="74" />
                                <Setter Property="Height" Value="25" />
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.RowStyle>
                            <Style TargetType="{x:Type DataGridRow}">
                                <Setter Property="Background" Value="DimGray" />
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="TextBlock.TextAlignment" Value="Center" />
                                <Setter Property="Width" Value="74" />
                                <Setter Property="Height" Value="20" />
                            </Style>
                        </DataGrid.CellStyle>
                    </DataGrid>
                    <StackPanel Orientation="Horizontal" Margin="0, 5, 0, 0">
                        <Button Content="Add"
                                Command="{Binding AddAlchemicalBonusCommand}"
                                Width="60" Height="20" Margin="10,0,10,0" />
                        <Button Content="Remove"
                                Command="{Binding RemoveAlchemicalBonusCommand}"
                                Width="60" Height="20" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150"
                            Height="250" Margin="10, 0, 0, 0">
                    <TextBlock Margin="0, 0, 0, 0" TextAlignment="Center">Armor:</TextBlock>
                    <DataGrid ItemsSource="{Binding AlchemicalBonuses}" Background="DimGray" Foreground="AliceBlue"
                              Width="150" Height="200" HeadersVisibility="Column" MouseDown="DeselectRow"
                              SelectedItem="{Binding SelectedAlchemicalBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="DimGray" />
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="FontSize" Value="14" />
                                <Setter Property="Width" Value="74" />
                                <Setter Property="Height" Value="25" />
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.RowStyle>
                            <Style TargetType="{x:Type DataGridRow}">
                                <Setter Property="Background" Value="DimGray" />
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="TextBlock.TextAlignment" Value="Center" />
                                <Setter Property="Width" Value="74" />
                                <Setter Property="Height" Value="20" />
                            </Style>
                        </DataGrid.CellStyle>
                    </DataGrid>
                    <StackPanel Orientation="Horizontal" Margin="0, 5, 0, 0">
                        <Button Content="Add"
                                Command="{Binding AddAlchemicalBonusCommand}"
                                Width="60" Height="20" Margin="10,0,10,0" />
                        <Button Content="Remove"
                                Command="{Binding RemoveAlchemicalBonusCommand}"
                                Width="60" Height="20" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150"
                            Height="250" Margin="10, 0, 0, 0">
                    <TextBlock Margin="0, 0, 0, 0" TextAlignment="Center">BAB:</TextBlock>
                    <DataGrid ItemsSource="{Binding AlchemicalBonuses}" Background="DimGray" Foreground="AliceBlue"
                              Width="150" Height="200" HeadersVisibility="Column" MouseDown="DeselectRow"
                              SelectedItem="{Binding SelectedAlchemicalBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="DimGray" />
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="FontSize" Value="14" />
                                <Setter Property="Width" Value="74" />
                                <Setter Property="Height" Value="25" />
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.RowStyle>
                            <Style TargetType="{x:Type DataGridRow}">
                                <Setter Property="Background" Value="DimGray" />
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="TextBlock.TextAlignment" Value="Center" />
                                <Setter Property="Width" Value="74" />
                                <Setter Property="Height" Value="20" />
                            </Style>
                        </DataGrid.CellStyle>
                    </DataGrid>
                    <StackPanel Orientation="Horizontal" Margin="0, 5, 0, 0">
                        <Button Content="Add"
                                Command="{Binding AddAlchemicalBonusCommand}"
                                Width="60" Height="20" Margin="10,0,10,0" />
                        <Button Content="Remove"
                                Command="{Binding RemoveAlchemicalBonusCommand}"
                                Width="60" Height="20" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150"
                            Height="250" Margin="10, 0, 0, 0">
                    <TextBlock Margin="0, 0, 0, 0" TextAlignment="Center">Competence:</TextBlock>
                    <DataGrid ItemsSource="{Binding AlchemicalBonuses}" Background="DimGray" Foreground="AliceBlue"
                              Width="150" Height="200" HeadersVisibility="Column" MouseDown="DeselectRow"
                              SelectedItem="{Binding SelectedAlchemicalBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="DimGray" />
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="FontSize" Value="14" />
                                <Setter Property="Width" Value="74" />
                                <Setter Property="Height" Value="25" />
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.RowStyle>
                            <Style TargetType="{x:Type DataGridRow}">
                                <Setter Property="Background" Value="DimGray" />
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="TextBlock.TextAlignment" Value="Center" />
                                <Setter Property="Width" Value="74" />
                                <Setter Property="Height" Value="20" />
                            </Style>
                        </DataGrid.CellStyle>
                    </DataGrid>
                    <StackPanel Orientation="Horizontal" Margin="0, 5, 0, 0">
                        <Button Content="Add"
                                Command="{Binding AddAlchemicalBonusCommand}"
                                Width="60" Height="20" Margin="10,0,10,0" />
                        <Button Content="Remove"
                                Command="{Binding RemoveAlchemicalBonusCommand}"
                                Width="60" Height="20" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150"
                            Height="250" Margin="10, 0, 0, 0">
                    <TextBlock Margin="0, 0, 0, 0" TextAlignment="Center">Enhancement:</TextBlock>
                    <DataGrid ItemsSource="{Binding AlchemicalBonuses}" Background="DimGray" Foreground="AliceBlue"
                              Width="150" Height="200" HeadersVisibility="Column" MouseDown="DeselectRow"
                              SelectedItem="{Binding SelectedAlchemicalBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="DimGray" />
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="FontSize" Value="14" />
                                <Setter Property="Width" Value="74" />
                                <Setter Property="Height" Value="25" />
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.RowStyle>
                            <Style TargetType="{x:Type DataGridRow}">
                                <Setter Property="Background" Value="DimGray" />
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="TextBlock.TextAlignment" Value="Center" />
                                <Setter Property="Width" Value="74" />
                                <Setter Property="Height" Value="20" />
                            </Style>
                        </DataGrid.CellStyle>
                    </DataGrid>
                    <StackPanel Orientation="Horizontal" Margin="0, 5, 0, 0">
                        <Button Content="Add"
                                Command="{Binding AddAlchemicalBonusCommand}"
                                Width="60" Height="20" Margin="10,0,10,0" />
                        <Button Content="Remove"
                                Command="{Binding RemoveAlchemicalBonusCommand}"
                                Width="60" Height="20" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="Save" Width="100" Height="30" Margin="10,0,0,0" Command="{Binding AcceptFeatCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />

                <Button Content="Cancel" Width="100" Height="30" Margin="590,0,0,0" Command="{Binding CancelCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>